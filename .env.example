# Environment Configuration Template
# Copy this file to .env and fill in your values

# ======================
# Exchange API Keys
# ======================

# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here
BINANCE_TESTNET=true

# Kraken
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET=your_kraken_secret_here

# Coinbase
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=true

# Bybit
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET=your_bybit_secret_here
BYBIT_TESTNET=true

# ======================
# Database Settings
# ======================
DATABASE_URL=sqlite:///./arbitrage.db
POSTGRES_URL=postgresql://user:password@localhost:5432/arbitrage

# ======================
# Risk Management
# ======================

# Position Limits (in USD)
MAX_POSITION_SIZE=10000
MAX_DAILY_LOSS=1000
MAX_PORTFOLIO_VALUE=50000

# Slippage Limits (in percentage)
MAX_SLIPPAGE_PCT=0.5
MIN_PROFIT_THRESHOLD=0.1

# Circuit Breaker
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_LOSS_THRESHOLD=500

# ======================
# Strategy Parameters
# ======================

# Cross-Exchange Arbitrage
MIN_ARBITRAGE_SPREAD=0.05
TRANSFER_TIME_PENALTY=0.02

# Triangular Arbitrage
MIN_TRIANGULAR_PROFIT=0.03
MAX_TRIANGULAR_LEGS=3

# Signal Filters
MIN_VOLUME_THRESHOLD=50000
MAX_SPREAD_WIDTH=2.0

# ======================
# Execution Settings
# ======================

# Order Types
DEFAULT_ORDER_TYPE=limit
ENABLE_IOC_ORDERS=true
ENABLE_FOK_ORDERS=false

# Timing
ORDER_TIMEOUT_SECONDS=30
MAX_EXECUTION_DELAY=5

# ======================
# API Server Settings
# ======================
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key_for_jwt_tokens
API_ENABLE_CORS=true

# TLS
API_USE_TLS=false
API_CERT_FILE=./certs/cert.pem
API_KEY_FILE=./certs/key.pem

# ======================
# Monitoring & Alerts
# ======================

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/arbitrage.log
ENABLE_STRUCTURED_LOGGING=true

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#trading-alerts
ENABLE_SLACK_ALERTS=false

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
ENABLE_TELEGRAM_ALERTS=false

# Metrics
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=8001

# ======================
# Data Storage
# ======================

# Market Data
ENABLE_DATA_RECORDING=true
DATA_RETENTION_DAYS=30
PARQUET_COMPRESSION=snappy

# Backup
ENABLE_BACKUPS=true
BACKUP_INTERVAL_HOURS=24
BACKUP_LOCATION=./backups

# ======================
# Performance Tuning
# ======================

# WebSocket Settings
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
WS_MAX_RECONNECT_ATTEMPTS=10

# Threading
MAX_WORKER_THREADS=4
ASYNC_QUEUE_SIZE=1000

# Memory Management
MAX_ORDERBOOK_LEVELS=1000
DATA_BUFFER_SIZE=10000

# ======================
# Development Settings
# ======================
DEBUG=false
TESTING=false
MOCK_EXCHANGES=false

# Backtesting
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_BALANCE=10000
